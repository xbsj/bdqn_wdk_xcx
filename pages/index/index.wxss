/**index.wxss**/

page {
  background: #f5f5f5;
  height: 100%;
}

.index {
  width: 100%;
  height: 100%;
}

.index_search {
  width: 100%;
  height: 100rpx;
  height: 61px;
  background: rgba(255, 255, 255, 1);
  display: flex;
  justify-content: center;
  align-items: center;
}

.index_search input {
  width: 94%;
  height: 36px;
  background: rgba(142, 142, 147, 0.12);
  border-radius: 4px;
  font-size: 14px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 22px;
}

.index_round {
  width: 100%;
  height: 25%;
}

.index_round swiper {
  height: 100%;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.index_sources {
  width: 100%;
  overflow: hidden;
  padding: 20rpx;
  background: white;
  white-space: nowrap;
  margin-bottom: 20rpx;
}

.index_soueces_title {
  font-weight: 700;
  
}

.index_sources scroll-view {
  padding: 0rpx;
  margin: 0rpx;
}

.index_sources .sources_item {
  padding: 0rpx;
  width: 400rpx;
  margin-right: 23rpx;
  display: inline-block;
}

.nav_item {
  width: 100%;
  padding: 0rpx;
  margin: 0rpx;
}

.nav_item image {
  width: 100%;
  padding: 0rpx;
  margin: 0rpx;
}





/* 热门推荐 */
.index_source {
  width: 100%;
  background: white;
  
}

.source_item {
  width: 100%;
  height: 230rpx;
  padding: 20rpx;
  font-size: 14px;
  color: darkgray;
  border-bottom: 1rpx solid rgba(229, 229, 229, 1);
  
}

.source_item .source_item_son {
  float: left;
  height: 230rpx;
  border-radius: 4px;
  
}

.source_item .source_item_img {
  width: 330rpx;
  background: forestgreen;
}

.source_item .source_item_js {
  width: 400rpx;
  position: relative;
  padding-left: 10rpx;
}

.source_item .source_item_img image {
  width: 100%;
  
}

.source_item_js_count   {
  width: 100%;
  position: absolute;
  bottom: 5rpx;
  
  display: flex;
  align-items: center;

}