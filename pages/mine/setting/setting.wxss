/* pages/mine/setting/setting.wxss */
page{
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}

.setting_head{
  width: 100%;
  height: 80rpx;
  position: relative;
  background: #fff;
  display:flex; 
  align-items: center;
}
.setting_head .head_img{
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 10rpx;
  right: 70rpx;
}

.left_arrow{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 30rpx;
  right: 20rpx;
}

.setting_name{
  height: 80rpx;
  position: relative;
  background: #fff;
  margin-top: 10rpx;
  display:flex; 
  align-items: center;
}

.setting_signout{
  margin-top: 20rpx;
  width: 100%;
  height: 80rpx;
  display:flex;                   
  justify-content: center;
  align-items: center;
  background: #fff
}

text{
  font-family:"微软雅黑";
  font-size: 32rpx;
  margin-left: 10rpx;             
  
}

.setName{
  font-family:"微软雅黑";
  font-size: 32rpx;
  position: absolute;
  right: 80rpx;
}