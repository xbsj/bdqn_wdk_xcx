page {
  background: #f5f5f5;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.video {
  width: 100%;
  height: 100%;
}

.navbar_item {
  margin-bottom: 17%;
}

/*  */

.navbar_item_son {
  padding: 20rpx;
  background: #fff;
}

.video_title {
  font-weight: 700;
  margin-bottom: 10rpx;
}

/* 导航栏 */

.navbar {
  flex: none;
  display: flex;
  background: #fff;
  border-bottom: 1rpx solid rgba(229, 229, 229, 1);
}

.navbar .item {
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}

.navbar .item.active {
  color: #fc0;
}

.navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #fc0;
}

.bott {
  position: fixed;
  width: 100%;
  height: 9%;
  bottom: 0px;
  background-color: blueviolet;

  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
  
}

.bott_bot {
  width: 90%;
  height: 70rpx;
  background: green;
  border-radius: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
}

.swiper-box {
  border: 1px solid red;
  margin-bottom: 15%;
}
