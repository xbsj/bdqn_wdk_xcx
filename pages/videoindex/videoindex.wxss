page{
  width: 100%;
  height: 100%;
}
.index_search {
   width: 100%;
  height: 100rpx;
  /*border: 1rpx solid red;
  margin-bottom: 15rpx; */

  height: 61px;
  background: rgba(255, 255, 255, 1);
  display: flex;
  justify-content: center;
  align-items: center;
}

.index_search input {
  width: 94%;
  height: 36px;
  background: rgba(142, 142, 147, 0.12);
  border-radius: 4px;
  font-size: 14px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 22px;
}

.video_url{
  width: 100%;

  border: 1px solid red;
}

.video_url video{
  width: 100%;
  display: block;
}


.index_source {
  width: 100%;
  background: white;
  
}

.source_item {
  width: 100%;
  height: 230rpx;
  padding: 20rpx;
  /* border: 1px solid red; */
  font-size: 14px;
  color: darkgray;
  border-bottom: 1rpx solid rgba(229, 229, 229, 1);
  
}

.source_item .source_item_son {
  float: left;
  height: 230rpx;
  border-radius: 4px;
  /* border: 1px solid red; */
}

.source_item .source_item_img {
  width: 330rpx;
  background: forestgreen;
}

.source_item .source_item_js {
  width: 400rpx;
  position: relative;
  padding-left: 10rpx;
}

.source_item .source_item_img image {
  width: 100%;
  
}

.source_item_js_count   {
  width: 100%;
  position: absolute;
  bottom: 5rpx;
  
  display: flex;
  align-items: center;
}